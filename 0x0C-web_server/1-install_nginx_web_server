#!/bin/bash

# Update the package list and install Nginx
apt-get update
apt-get install -y nginx

# Create a custom HTML file with "Hello World!"
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Ensure Nginx is configured to listen on port 80
if ! grep -q "listen 80;" /etc/nginx/sites-enabled/default; then
    sed -i '/server {/a \ \ \ \ listen 80;' /etc/nginx/sites-enabled/default
fi

# Restart Nginx without using systemctl
service nginx restart
