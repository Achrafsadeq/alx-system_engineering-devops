#!/usr/bin/env bash
# manage_my_process
# This script writes "I am alive!" to a file every 2 seconds

while true
do
    echo "I am alive!" >> /tmp/my_process
    sleep 2
done

#!/usr/bin/env bash
# 101-manage_my_process
# This init script manages manage_my_process

pid_file="/var/run/my_process.pid"
script_path="./manage_my_process"

start_process() {
    # Start the process in the background
    $script_path &
    # Save the PID to pid file
    echo "$!" > "$pid_file"
    echo "manage_my_process started"
}

stop_process() {
    # Check if PID file exists
    if [ -f "$pid_file" ]; then
        # Kill the process
        kill "$(cat "$pid_file")"
        # Remove PID file
        rm "$pid_file"
    fi
    echo "manage_my_process stopped"
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        stop_process
        start_process
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
